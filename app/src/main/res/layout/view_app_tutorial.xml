<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="48dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/imgContentDescription"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgTutorial"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTutorialHeader"
        tools:text="Welcome to MySelf!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@id/imgTutorial"
        android:paddingTop="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTutorial"
        tools:text="This is the tutorial"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:layout_below="@id/lblTutorialHeader"
        />

</RelativeLayout>